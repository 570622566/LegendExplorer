<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_file_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imagebutton_file_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="0"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/back_button"
            android:visibility="visible" />

        <EditText
            android:id="@+id/edittext_file_path"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:singleLine="true" />

        <CheckBox
            android:id="@+id/checkbox_file_all"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:visibility="gone" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_bookmark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_file_header" >
    </FrameLayout>

</RelativeLayout>